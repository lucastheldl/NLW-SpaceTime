// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id   String @id @default(uuid())
  githubId Int @unique
  name String
  login String
  avatarUrl String

  //um usuario pode ter varias memorias, relacionament
  memories Memory[]
}
model Memory {
  id   String @id @default(uuid())
  coverUrl String
  content String
  isPublic Boolean @default(false)
  CreatedAt DateTime @default(now())

  //uma memomria pertence a um usuario
  user User @relation(fields: [userId],references: [id])
  userId String
}
